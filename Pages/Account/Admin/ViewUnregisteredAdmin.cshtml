@page
@model fur_ever_homes.Pages.Account.NewFolder.ViewUnregisteredAdminModel
@{
    Layout = "_LayoutProfile";
}

@foreach (Dictionary<string, string> petData in Model.dataArray)
{
    string petID = petData["pet_id"];
    string name = petData["name"];
    string description = petData["description"];
    string imgURL = petData["image_url"];

    <form class="card-container" method="post">
        <div class="card">
            <div class="card-img" style="background-image: url(@imgURL);"></div>
            <h3>@name</h3>
            <p>@description</p>
            <input asp-for="PetCard.PetID" value="@petID" type="hidden"/>
            <div class="btn">
                <button type="submit">APPROVE</button>
            </div>

        </div>
    </form>
}